# Remindes Frontend Configuration
# Copy this file to .env and fill in your values

# Backend API URL
# IMPORTANT: This must match the URL where your backend is accessible
# 
# FOR LOCAL DEVELOPMENT:
# VITE_API_URL=http://localhost:8000
#
# FOR PRODUCTION (with reverse proxy like Nginx):
# VITE_API_URL=/api
#
# FOR PRODUCTION (direct backend URL):
# VITE_API_URL=https://api.remindes.com
#
# Default is set for production with reverse proxy
VITE_API_URL=/api

# App name (optional)
VITE_APP_NAME=Remindes

# Enable Google OAuth (optional)
# Set to 'true' if Google OAuth is configured in backend
VITE_ENABLE_GOOGLE_OAUTH=true

# Stripe Publishable Key (optional)
# Get from: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
