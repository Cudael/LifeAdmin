# Remindes Frontend Configuration
# Copy this file to .env and fill in your values

# Backend API URL
# For local development, use http://localhost:8000
# For production with reverse proxy (Nginx), use /api
# For production with direct backend access, use https://api.yourdomain.com
VITE_API_URL=http://localhost:8000

# App name (optional)
VITE_APP_NAME=Remindes

# Enable Google OAuth (optional)
# Set to 'true' if Google OAuth is configured in backend
VITE_ENABLE_GOOGLE_OAUTH=true

# Stripe Publishable Key (optional)
# Get from: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
