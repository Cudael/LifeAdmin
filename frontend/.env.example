# Remindes Frontend Configuration
# Copy this file to .env and fill in your values

# Backend API URL
# IMPORTANT: This must match the URL where your backend is accessible
# Examples:
# - Local development: http://localhost:8000
# - Production with Nginx proxy: /api
# - Production direct URL: https://api.remindes.com
VITE_API_URL=/api

# App name (optional)
VITE_APP_NAME=Remindes

# Enable Google OAuth (optional)
# Set to 'true' if Google OAuth is configured in backend
VITE_ENABLE_GOOGLE_OAUTH=false
