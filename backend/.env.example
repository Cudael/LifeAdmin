# Remindes Backend Configuration
# Copy this file to .env and fill in your values

# ================================
# REQUIRED SETTINGS
# ================================

# Secret key for JWT tokens and session encryption
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-CHANGE-THIS

# Frontend URL for CORS (must be exact, including protocol, no trailing slash)
# Examples:
# - Local: http://localhost:5173
# - Production: http://your-server-ip or https://remindes.com
FRONTEND_URL=http://localhost:5173

# ================================
# DATABASE (Optional - defaults to SQLite)
# ================================

# SQLite database file (default: database.db)
# DATABASE_URL=sqlite:///database.db

# ================================
# GOOGLE OAUTH (Optional)
# ================================

# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth Redirect URI (Production)
# For production, set this to your exact callback URL
# This MUST match one of the "Authorized redirect URIs" in Google Cloud Console
# Examples:
# - Production: https://remindes.com/auth/google/callback
# - With API prefix: https://remindes.com/api/auth/google/callback
# - Leave empty for local development (auto-detects as http://localhost:8000/auth/google/callback)
OAUTH_REDIRECT_URI=

# Authorized JavaScript Origins in Google Console should include:
# - https://remindes.com
# - https://www.remindes.com
# - http://localhost:5173 (for local development)

# ================================
# EMAIL / SMTP (Optional)
# ================================

# SMTP server settings for email verification and notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
# For Gmail, use an App Password: https://support.google.com/accounts/answer/185833
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Remindes

# ================================
# STRIPE PAYMENT (Optional)
# ================================

# Stripe API keys for payment processing
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Stripe Price IDs (from your Stripe dashboard)
STRIPE_PRICE_ID_PREMIUM=price_your_price_id_here

# Stripe Webhook Secret (get after creating webhook in Stripe dashboard)
# Create webhook at: https://dashboard.stripe.com/webhooks
# Webhook URL: https://remindes.com/api/payments/webhooks/stripe
STRIPE_WEBHOOK_SECRET=

# ================================
# SECURITY (Production Settings)
# ================================

# Enable secure cookies (HTTPS only) in production
SECURE_COOKIES=false

# Token expiration times (in minutes for access token, days for refresh token)
# Access token: How long users stay logged in without activity (default: 10080 minutes = 7 days)
# Refresh token: Maximum time before requiring re-login (default: 30 days)
# Note: Longer tokens = better UX but slightly less secure if token is stolen
# ACCESS_TOKEN_EXPIRE_MINUTES=10080
# REFRESH_TOKEN_EXPIRE_DAYS=30

# ================================
# OPTIONAL SETTINGS
# ================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum file upload size in MB (default: 10)
MAX_UPLOAD_SIZE_MB=10
