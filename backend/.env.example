# LifeAdmin Backend Configuration
# Copy this file to .env and fill in your values

# ================================
# REQUIRED SETTINGS
# ================================

# Secret key for JWT tokens and session encryption
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-CHANGE-THIS

# Frontend URL for CORS (must be exact, including protocol, no trailing slash)
# Examples:
# - Local: http://localhost:5173
# - Production: http://your-server-ip or https://yourdomain.com
FRONTEND_URL=http://localhost:5173

# ================================
# DATABASE (Optional - defaults to SQLite)
# ================================

# SQLite database file (default: database.db)
# DATABASE_URL=sqlite:///database.db

# ================================
# GOOGLE OAUTH (Optional)
# ================================

# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ================================
# EMAIL / SMTP (Optional)
# ================================

# SMTP server settings for email verification and notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
# For Gmail, use an App Password: https://support.google.com/accounts/answer/185833
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=LifeAdmin

# ================================
# SECURITY (Production Settings)
# ================================

# Enable secure cookies (HTTPS only) in production
SECURE_COOKIES=false

# Token expiration times (in minutes for access token, days for refresh token)
# Access token: How long users stay logged in without activity (default: 10080 minutes = 7 days)
# Refresh token: Maximum time before requiring re-login (default: 30 days)
# Note: Longer tokens = better UX but slightly less secure if token is stolen
# ACCESS_TOKEN_EXPIRE_MINUTES=10080
# REFRESH_TOKEN_EXPIRE_DAYS=30

# ================================
# OPTIONAL SETTINGS
# ================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum file upload size in MB (default: 10)
MAX_UPLOAD_SIZE_MB=10
